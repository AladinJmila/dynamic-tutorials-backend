<h4 class='text-center my-4 d-inline-block'>Add Slide
</h4>
<button id='add-slide' class='btn btn-primary my-4 d-inline-block'><i
    class='fa fa-plus fa-lg'
    aria-hidden='true'
  ></i></button>
<form>
  <div class='row g-3 align-items-center mb-3'>

    <div class='row col-4'>
      <div class='col-auto'>
        <label class='col-form-label' for='name'>Slide Name:</label>
      </div>
      <div class='col-auto'>
        <input class='form-control' type='text' name='name' id='name' />
      </div>
    </div>

    <div class='row col-4'>
      <div class='col-auto'>
        <label class='col-form-label' for='slide-id'>Slide Id:</label>
      </div>
      <div class='col-auto'>
        <span
          id='slide-id'
          class='form-control id-container'
          for='slide-id'
        >{{slideData.slideId}}</span>
      </div>
    </div>

    <div class='row col-4'>
      <div class='col-auto'>
        <label class='col-form-label' for='feature-id'>Feature Id:</label>
      </div>
      <div class='col-auto'>
        <span
          id='feature-id'
          class='form-control id-container'
          for='feature-id'
        >
          {{#if featureData}}
            {{featureData.featureId}}
          {{else}}
            {{slideData.featureId}}
          {{/if}}
        </span>
      </div>
    </div>
  </div>

  <div class='media row'>
    <div id='image' class='media-image col-8 border p-5 text-center'>
      <input
        type='file'
        name='image-file'
        id='image-file'
        class='form-control'
      />
    </div>

    <div id='note' class='col-4 border p-5 text-center'>
      <label>To Retain
        <textarea name='' id='' cols='30' rows='10'></textarea>
      </label>
    </div>
    <div id='audio-container' class='media-audio col-12 border p-2 text-center'>
      <button id='btn-start' class='btn btn-primary me-2'>Start</button>
      <button id='btn-stop' class='btn btn-primary me-2'>Stop</button>
      <audio id='audio' src='' controls></audio>
    </div>
    <div class='media-audio col-12 border p-2 text-center'>
      <input id='submit' type='submit' value='Submit' class='btn btn-primary' />
    </div>
  </div>

</form>