  <div class='add-existing-feature'>
    <input
      id='existing-feature-id'
      class='existing-feature-id'
      type='text'
      placeholder='existing feature id'
    />
    <button class='add-existing-feature-btn' id='add-existing-feature-btn'>
      <i class='fa fa-plus'></i>
    </button>
  </div>
