<nav class='features'>

  <div id='features-state'></div>
  <div class='features-count'>
    <p id='selected-group-name'>select a group</p>
  </div>
  <div class='features-collection'>
    {{! <button class='feature-btn'>Feature 1</button>
    <button class='feature-btn'>Feature 2</button>
    <button class='feature-btn'>Feature 3</button>
    <button class='feature-btn'>Feature 4</button> }}
  </div>
  <div class='add-group-feature'>
    <input
      type='text'
      id='feature-name'
      class='group-feature-name'
      placeholder='enter name'
    />
    <button class='add-group-feature-btn' id='add-feature-btn'><i
        class='fa fa-plus fa-lg'
      ></i>
    </button>
