<h4 class='mb-3'>Application</h4>
<div class='row mb-3'>
  <div class='col-10 pe-0'>
    <select class='form-select'>
      <option selected>Open this select menu</option>
      <option value='1'>One</option>
      <option value='2'>Two</option>
      <option value='3'>Three</option>
    </select>
  </div>
  <div class='col-2'>
    <button type='submit' id='add-application' class='btn btn-primary'>
      <i class='fa fa-plus fa-lg p-1' aria-hidden='true'></i>
    </button>
  </div>
</div>

<form class='row' action='/structure/create-application' method='post'>
  <div class='col-10 mb-3 pe-0'>
    <input type='text' name='appName' class='form-control' id='appName' />
  </div>
  <div class='col-2'>
    <button type='submit' class='btn btn-primary px-2'>Add</button>
  </div>
</form>